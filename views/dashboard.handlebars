
<div class="container-fluid page-title p-2 mt-3 text-center">
<h1 class="p-3">Welcome {{username}}</h1>
</div>

<form class="company-info-form row g-3 p-4" style="max-width: 100%">
<!-- NAME -->
  <div class="col-md-4">
    <label for="company-name" class="form-label">Business Name</label>
    <input name="company-name" type="text" class="form-control" value="{{company.company_name}}" id="company-name">
  </div>
<!-- Address -->
  <div class="col-4">
    <label for="address" class="form-label">Address</label>
    <input name="address" type="text" class="form-control" value="{{company.address}}" id="address" placeholder="1234 Main St">
  </div>
<!-- Phone Number -->
  <div class="col-4">
    <label for="phone" class="form-label">Phone</label>
    <input name="phone" type="text" class="form-control" value="{{company.phone}}" id="phone" placeholder="9058524562">
  </div>
<!-- Company Email -->
  <div class="col-4">
    <label for="company-email" class="form-label">Business Email</label>
    <input name="company-email" type="text" class="form-control" value="{{company.company_email}}" id="company-email" placeholder="company@gmail.com">
  </div>
<!-- website -->
  <div class="col-4">
    <label for="website" class="form-label">Website</label>
    <input name="website" type="text" class="form-control" value="{{company.website}}"id="website" placeholder="www.test.com">
  </div>
<!-- Industry -->
    <div class="col-md-4">
    <label for="industry" class="form-label">Industry</label>
    <select name="industry" class="form-select  mb-3" id="industry" aria-label=".form-select-lg example">
      <option>Choose a industry...</option>
      {{#each industries as |industry|}}
      {{> industry-selection industryId=industry.id industryName=industry.industry_name}}
      {{/each}}
    </select>
  </div>
<!-- About Us -->
  <div class="col-md-12">
    <label for="about" class="form-label">About Us</label>
    <textarea name="about" class="form-control" id="about">{{company.about}}</textarea>
  </div>
<!-- Hours -->
<div class="container-fluid mt-3">
   
    <div class="row mt-4">
    <h4>Business Hours: </h4>
    </div>
    <div class="row mt-3">
    <div class="col">
    <label for="mon" class="form-label">Mon</label>
    <input type="text" class="form-control" value="{{company.hour.mon}}" id="mon"> 
    </div>
    <div class="col">
    <label for="tues" class="form-label">Tues</label>
    <input type="text" class="form-control" value="{{company.hour.tues}}" id="tues">
    </div>
    <div class="col">
    <label for="wed" class="form-label">Wed</label>
    <input type="text" class="form-control" value="{{company.hour.wed}}" id="wed">
    </div>
    <div class="col">
    <label for="thurs" class="form-label">Thurs</label>
    <input type="text" class="form-control" value="{{company.hour.thurs}}" id="thurs">
    </div>
    <div class="col">
    <label for="fri" class="form-label">Fri</label>
    <input type="text" class="form-control" value="{{company.hour.fri}}" id="fri">
    </div>
    <div class="col">
    <label for="sat" class="form-label">Sat</label>
    <input type="text" class="form-control" value="{{company.hour.sat}}" id="sat">
    </div>
    <div class="col">
    <label for="sun" class="form-label">Sun</label>
    <input type="text" class="form-control" value="{{company.hour.sun}}" id="sun">
    </div>
</div>
</div>

{{#if company}}
<!-- Products -->
<div class="container-fluid mt-3" id="product-list">
  {{#if company.products}}
    <h4 class="mt-4"> List your products and/or services:</h4>
    {{#each company.products as |product|}}
    {{> add-company product}}
    {{/each}}
  {{/if}}
  <h4 class="mt-3"> Add a new product or service:</h4>
  <div class="row mb-4">
    <!-- Product Name -->
    <div class="col-md-4">
      <input type="text" class="form-control" value="{{product_name}}" id="product-add-name" placeholder="Product/Service Name">
    </div>
    <!-- Products Description -->
    <div class="col-md-7">
      <textarea name="description-text" class="form-control" rows="1" id="description-add-text" placeholder="Product/Service Description">{{description_text}}</textarea>
    </div>
    <div class="col-md-1 d-flex justify-content-end align-items-end">
      <button type="button" class="btn " id="add-product-btn">+</button>
    </div>
  </div>
</div>
{{/if}}

<!-- Save button -->
{{#if company}}
<div class="col-12 d-flex justify-content-center mt-4">
    <button type="submit" class="btn ">Update Company</button>
</div> 
{{else}}
<div class="row" >
    <div class="col-12 d-flex justify-content-center mt-4">
    <button type="submit" class="btn ">Create Company</button>
</div>
{{/if}}
</form>

{{#if company}}
<script src="/javascript/edit-company.js"></script>
<script src="/javascript/add-delete-product.js"></script>
{{else}}
<script src="/javascript/add-company.js"></script>
{{/if}}
